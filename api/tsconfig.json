{
  "ts-node": {
    "compilerOptions": {
      "plugins": [
        {
          "transform": "typia/lib/transform"
        }
      ]
    }
  },
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@tolk/shared": ["../shared/dist"]
    },
    "plugins": [
      {
        "transform": "typia/lib/transform"
      }
    ]
  },
  "include": ["src/**/*"]
}
